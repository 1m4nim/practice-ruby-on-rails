<%= form_with(model: post) do |form| %>
  
  <% if post.errors.any? %>
    <div style="color: red;">
      <p>入力内容にエラーがあります:</p>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, "内容" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "記事を保存" %>
  </div>
<% end %>